<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      	<%= render 'layouts/errors', obj: @book %>
      <%= render 'books/list', user: current_user, book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table'>
    <thead>
    <tr>
      <th colspan='1'></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= attachment_image_tag(@group, :image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= @group.name %></td>
        <td><%= @group.introduction %></td>
        <td>
          <% @group.users.each do |user| %>
          <%= user.name %>
          <% end %>
        </td>
        <% if @group.owner_id == current_user.id %>
        <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-success" %></td>
        <td><%= link_to 'Notice an Event',group_new_mail_path(@group), class: "btn btn-sm btn-info" %></td>
        <% else %>
          <% if @group.joined?(current_user) %>
          <td><%= link_to 'Leave this group', group_group_users_path(@group), class: 'btn btn-danger', method: :delete %></td>
          <% else %>
          <td><%= link_to 'Join this group',group_group_users_path(@group), class: 'btn btn-success', method: :post %></td>
          <% end %>
        <% end %>
      </tr>
  </tbody>
</table>
    </div>
  </div>
</div>