<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2><%= @user.name %> さんとのチャット</h2>
            <table class="message table">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
                </tr>
              </thead>
            <tbody class="message">
            <%= render "message", chats: @chats,user: @user %>
            </tbody>
            </table>
            <%= form_with model: @chat, remote: true do |f| %>
              <%= f.text_field :message %>
              <%= f.hidden_field :room_id, :value => @room.id %>
              <%= f.submit "送信", class:"btn btn-sm btn-success chat-btn" %>
            <% end %>
        </div>
    </div>
</div>