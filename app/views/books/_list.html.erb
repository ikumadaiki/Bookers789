
      <!-- プロフィール -->
      <h2>User info</h2>
      <table class='table'>
       <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
       <tr>
          <th>name</th>
          <th><%= user.name %></th>
       </tr>
       <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
       </tr>
       <tr><!-- フォロー数 -->
          <th>follows</th>
          <th>
           <%= link_to follower_user_path(user) do %>
            <%= "#{user.followers.count}" %>
           <% end %>
          </th>
       </tr>
       <tr><!-- フォロワー数 -->
          <th>followers</th>
          <th>
           <%= link_to followed_user_path(user) do %>
            <%= "#{user.followeds.count}" %>
           <% end %>
          </th>
       </tr>

      </table>
      <!-- プロフィールここまで -->

      <!-- 編集ボタン or フォローボタン-->
       <div class='row'>
        <% if user == current_user %>
          <%= link_to"",edit_user_path(user.id) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog"%>
        <% else %>
          <% if current_user.following?(user)%>
           <%= link_to"フォロー外す",user_relationships_path(user.id), method: :delete ,class:"btn btn-info"%>
          <% else %>
           <%= link_to"フォローする",user_relationships_path(user.id), method: :post ,class:"btn btn-success"%>
          <% end %>
        <% end %>
       </div>
       <!-- 編集ボタン or フォローボタンここまで-->

      <!-- 投稿フォーム -->
      <h2 class="mt-3">New book</h2>
       <%= form_with model:book,local:true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.text_field :category, class: 'form-control book_category' %>
        </div>
        <!--星評価-->
        <div class="form-group row" id="star">
          <%= f.label :rate,'Rate ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :rate, id: :review_star %>
          <script>
            $('#star').raty({
                size     : 36,
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",

                scoreName: 'book[rate]',
                half: true,
                <% if action_name == "edit" %>
                readOnly :true,
                score: <%= book.rate %>,
                <% end %>
            });
          </script>
        </div>
        <!--星評価-->
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      <!-- 投稿フォームここまで -->

